<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Film{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}" />
            <link rel="stylesheet" type="text/css" href="{{ asset('css/styles.css') }}" />
        {% endblock %}
        
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <container>
        <nav>
                <ul class="nav nav-pills">
                    <li><a href="{{ path('homepage') }}" title="Accueil">Accueil</a></li>
                 {%   if ( app.user==null) %}
                      <li><a href="{{ path('login_check') }}" title="Login">Login</a></li>
                       <li><a href="{{ path('inscription') }}" title="inscription">Inscription</a></li>
                  {% else %}
                        <li><a href="">Bonjour {{app.user.username|capitalize}}</a></li>
                       <li><a href="{{ path('logout') }}" title="LogOut">Log out</a></li>
                   {% endif %}
                         
                    </ul>
                    
        </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </container>
    </body>
</html>
